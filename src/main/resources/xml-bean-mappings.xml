    <mapping type="one-way">
        <class-a>me.prettyprint.hector.api.ddl.ComparatorType</class-a>
        <class-b>com.kuprowski.helenos.types.JsonComparatorType</class-b>
        <field>
            <a>className</a>
            <b>className</b>
        </field>
        <field>
            <a>typeName</a>
            <b>typeName</b>
