        <field>
            <a>name</a>
            <b>name</b>
        </field>
        <field>
            <a>strategyClass</a>
            <b>strategyClass</b>
        </field>
        <field copy-by-reference="true">
            <a>strategyOptions</a>
            <b>strategyOptions</b>
        </field>
        <field>
            <a>replicationFactor</a>
            <b>replicationFactor</b>
        </field>
        <field>
            <a>cfDefs</a>
            <b>cfDefs</b>
        </field>
    </mapping>
        
